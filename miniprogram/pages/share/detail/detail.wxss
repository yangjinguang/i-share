    /*border-bottom: 1px solid #dddddd;*/
    /*background-color: #ffffff;*/
    background-color: #f6f6f6;
    height: 50px;
    padding: 0 15px;
}

.commnet-input-group_container {
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;

}

.comment-input-group input {
    flex: 1;
    padding: 10rpx;
    margin-right: 10px;
    border-radius: 10rpx;
    font-size: 20rpx;
    color: #333;
    background-color: #FFFFFF;
}

.comment-input-group button {
    margin: 0;
    height: 40rpx;
    line-height: 40rpx;
    font-size: 20rpx;
}
