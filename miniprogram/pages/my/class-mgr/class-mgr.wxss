page {
    height: 100%;
}

.tags-list {
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
}

.tags-list-title {
    height: 100rpx;
    display: flex;
    align-items: center;
    padding: 0 15px;
    background-color: #fff;
    border-bottom: 1px solid #ddd;
}

.tags-list-title text {
    flex: 1;
    font-size: 30rpx;
    color: #999;
}

.tags-list-title .weui-btn {
    margin: 0;
}
.tags-list-title image {
    width: 30rpx;
    height: 30rpx;
}

.tags-list-body {
    flex: 1;
    overflow: auto;
}


