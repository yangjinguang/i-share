.form-static-group {
  display: flex;
  align-items: center;
  padding: 10rpx 15px;

}
.form-static-group .form-label {
  font-size: 30rpx;
  color: #999;
}

.form-static-group .form-control {
  font-size: 30rpx;
  padding: 0 10rpx;
  color: #333;
}

.content-empty {
  color: #666;
  display: flex;
  align-items: center;
  justify-content: center;
  padding: 100rpx 0;
  font-size: 30rpx;
}

.weui-cell_select .weui-cell__hd {
  padding-left: 16px;
}

.weui-cell_select .weui-cell__hd + .weui-cell__bd .weui-select {
  padding-left: 0;
}
